<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.Views.ProjectDetailView"
             Title="ProjectDetailView"
             NavigatedFrom="ContentPage_NavigatedFrom"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <!-- Id and Name -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label Text="Id: " Grid.Column="0"/>
            <Entry Text="{Binding Model.Id}" Grid.Column="1" IsReadOnly="True"/>
            <Label Text="Name: " Grid.Column="2"/>
            <Entry Text="{Binding Model.Name}" Grid.Column="3"/>
        </Grid>
        <!-- Complete Percent -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Text="Complete %: " Grid.Column="0"/>
            <Entry Text="{Binding Model.CompletePercent}" Grid.Column="1" Keyboard="Numeric"/>
        </Grid>
        <!-- Description -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Label Text="Description: " Grid.Column="0"/>
            <Entry Text="{Binding Model.Description}" Grid.Column="1"/>
        </Grid>
        <!-- Optional: Due Date, if you have it -->
        <!--
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <Label Text="Due by: " Grid.Column="0"/>
            <DatePicker Grid.Column="1" Date="{Binding Model.DueDate}" />
        </Grid>
        -->
        <Button Text="Ok" Clicked="OkClicked"/>
        <Button Text="Cancel" Clicked="CancelClicked"/>
    </VerticalStackLayout>
</ContentPage>
